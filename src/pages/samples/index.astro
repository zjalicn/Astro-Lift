---
import AltLayout from "@/layouts/AltLayout.astro";
import OxideImage from "@/assets/oxide.png";

const products = [
  {
    title: "Product One",
    image: OxideImage.src,
    url: "/products/product-one",
  },
  {
    title: "Product Two",
    image: OxideImage.src,
    url: "/products/product-two",
  },
  {
    title: "Product Three",
    image: OxideImage.src,
    url: "/products/product-three",
  },
  {
    title: "Product Four",
    image: OxideImage.src,
    url: "/products/product-four",
  },
  {
    title: "Product Five",
    image: OxideImage.src,
    url: "/products/product-five",
  },
];
---

<AltLayout title={`Samples`}>
  <main>
    <section class="py-16 mb-8">
      <div class="w-11/12 max-w-6xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-center">
          Sample Packs
        </h1>
        <p class="text-xl text-center max-w-2xl mx-auto">
          Improve your production with our amazing collection of high-quality
          samples
        </p>
      </div>
    </section>

    <section class="py-8">
      <div class="w-11/12 max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            products.map((product) => (
              <a
                href={product.url}
                class="rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group"
              >
                <div class="aspect-[16/10] overflow-hidden">
                  <img
                    src={product.image}
                    alt={product.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </div>
                <h2 class="p-4 text-xl font-semibold text-center">
                  {product.title}
                </h2>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</AltLayout>
